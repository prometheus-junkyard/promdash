<table class="table table-condensed">
  <% dashboards.each do |dashboard| %>
    <tr>
      <td class="dashboard_name"><%= link_to dashboard.name, dashboard_slug_path(dashboard.slug) %></td>
      <td>
        <%= link_to 'Rename', edit_dashboard_path(dashboard) %>
        &nbsp;&nbsp;
        <%= link_to 'Clone', clone_dashboard_path(id: dashboard.id) %>
        &nbsp;&nbsp;
        <%= link_to 'Delete', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <% if dashboard.dashboard_type == "template" && dashboard.profiles.length > 0 %>
        <tr>
          <td>
            Profiles: <%= dashboard.profiles.map {|p| p.name }.join(" | ") %>
          </td>
        </tr>
      <% end %>
    </tr>
  <% end %>
</table>
